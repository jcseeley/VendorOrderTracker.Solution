@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Vendor List:</h1>

@if (Model.Count == 0)
{
  <h2>There are no vendors on your list.</h2>
}

@if (Model.Count >= 1)
{
  @foreach (Vendor vendor in Model)
  {
    <h2><a href="/vendors/@vendor.Id/orders">@vendor.Name</a></h2>
  }
}

<a href='/vendors/new'><button>Add A Vendor</button></a><br>
<a href='/'>Back to Home</a>