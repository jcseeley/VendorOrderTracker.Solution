@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>Vendor List:</h3>

@if (Model.Count == 0)
{
  <h4>There are no vendors on your list.</h4>
}

@if (Model.Count >= 1)
{
  @foreach (Vendor vendor in Model)
  {
    <h4><a href="/vendors/@vendor.Id/orders">@vendor.Name</a></h4>
  }
}

<a href='/vendors/new'>Add A Vendor</a>